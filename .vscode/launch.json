{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to node",
      "request": "attach",
      "cwd": "${workspaceFolder}",
      "type": "node",
      "port": 9229
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "protocol": "inspector",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
