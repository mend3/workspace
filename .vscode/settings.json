{
  "search.exclude": {
    "**/.husky": true,
    "**/.nx": true,
    "**/.yarn": true,
    "**/node_modules": true,
    "**/build": true,
    "**/dist": true,
    "**/.next": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/node_modules/": true
  },
  "files.exclude": {
    "**/.husky": true,
    "**/.nx": true,
    "**/.yarn": true,
    "**/.next": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/node_modules/": true
  },
  "files.watcherExclude": {
    "**/.husky": true,
    "**/.nx": true,
    "**/.yarn": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/build": true,
    "**/dist": true,
    "**/lib": true,
    "**/env": true,
    "**/__tests__": true,
    "**/node_modules/": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "index.ts": "${dirname}.ts"
  },
  "prettier.configPath": ".prettierrc",
  "prettier.singleQuote": true,
  "prettier.withNodeModules": true,
  "prettier.arrowParens": "avoid",
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 140,
  "prettier.requireConfig": true,
  "npm.runSilent": true,
  "npm.autoDetect": "on",
  "npm.enableRunFromFolder": true,
  "npm.packageManager": "pnpm",
  "editor.minimap.maxColumn": 100,
  "editor.matchBrackets": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.fontFamily": "'JetBrains Mono','VictorMono NF', 'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.codeLens": true,
  "editor.mouseWheelZoom": true,
  "editor.fontLigatures": true,
  "editor.letterSpacing": 0.2,
  "editor.smoothScrolling": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "typescript.autoClosingTags": true,
  "typescript.check.npmIsInstalled": true,
  "typescript.referencesCodeLens.enabled": false,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.format.semicolons": "ignore",
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.parameterTypes.enabled": false,
  "typescript.inlayHints.enumMemberValues.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.locale": "en",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.quoteStyle": "single",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsc.autoDetect": "on",
  "typescript.suggestionActions.enabled": true,
  "typescript.suggest.completeJSDocs": true,
  "typescript.suggest.paths": true,
  "debug.allowBreakpointsEverywhere": true,
  "debug.showInStatusBar": "always",
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "debug.javascript.codelens.npmScripts": "never",
  "task.autoDetect": "on",
  "material-icon-theme.activeIconPack": "angular_ngrx",
  "js/ts.implicitProjectConfig.strictNullChecks": true,
  "css.validate": false,
  "scss.validate": false,
  "css.customData": [".vscode/css_custom_data.json"],
  "files.associations": {
    "*.env": "shellscript",
    "*.env.development": "shellscript",
    "*.env.production": "shellscript"
  },
  "exportall.config.folderListener": [],
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.semi": true,
  "prettier.trailingComma": "es5",
  "prettier.bracketSpacing": true,
  "prettier.bracketSameLine": false,
  "prettier.proseWrap": "preserve",
  "prettier.endOfLine": "lf",
  "git.ignoreLimitWarning": true,
  "mcp": {
    "inputs": [],
    "servers": {}
  },
  "chat.mcp.discovery.enabled": {
    "claude-desktop": false,
    "windsurf": false,
    "cursor-global": true,
    "cursor-workspace": false
  },
  // "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnType": false, // required
  "editor.formatOnPaste": true, // optional
  "editor.formatOnSave": true, // optional
  "editor.formatOnSaveMode": "file", // required to format on save
  "files.autoSave": "onFocusChange", // optional but recommended
  "vs-code-prettier-eslint.prettierLast": false, // set as "true" to run 'prettier' last not first
  "php.validate.executablePath": "php",
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[nginx]": {
    "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "python.formatting.provider": "autopep8",
    "editor.formatOnSave": true
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "DEVSENSE.phptools-vscode"
  }
}
